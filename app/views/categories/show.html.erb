<section class="p-0 height-600 parallax-bg" style="background-image: url(<%=@category.picture_url%>)">
    <div class="container h-100">
        <div class="row justify-content-between align-items-center h-100">
            <div class="col-md-8 mb-7">
                <h4 class="text-black font-weight-bold ">Le coup de main n&#39;a jamais été aussi proche !</h4>
                <h1 class="display-3 font-weight-bold text-black"><%=@category.name%></h1>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container">
        <div class="row">
            <%@post.where(is_validated:true).each do |post|%>
                <div class="col-md-4  mb-4 mt-4">
                    <div class="card">
                        <div class="card-body"> 
                            <h2 class="text-primary"><%= post.title %></h2>
                            <p><%= post.description%></p>
                            <p>Ville : <%= post.city.city_name%></p>
                            <p><%= link_to "Voir plus", post_path(post.id), class: 'btn btn-primary  mr-0 text-light'%></p>
                        </div>
                    </div>
                </div>
            <%end%>
            <% if @post.count == 0%>
                <h4 class="text-danger font-weight-bold "> Aucune annonce n'a été publié pour cette catégorie !</h4>
            <%end%>
            
        </div>
    </div>        
</section>

